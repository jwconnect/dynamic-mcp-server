{
  "servers": [
    {
      "name": "demo-server",
      "version": "1.0.0",
      "description": "데모 MCP 서버 - 계산기 및 인사말 기능 제공",
      "enabled": true,
      "tools": [
        {
          "name": "add",
          "title": "덧셈 계산기",
          "description": "두 숫자를 더합니다",
          "handler": {
            "path": "handlers/calculator.js",
            "function": "add"
          },
          "inputSchema": {
            "type": "object",
            "properties": {
              "a": { "type": "number" },
              "b": { "type": "number" }
            },
            "required": ["a", "b"]
          }
        },
        {
          "name": "multiply",
          "title": "곱셈 계산기",
          "description": "두 숫자를 곱합니다",
          "handler": {
            "path": "handlers/calculator.js",
            "function": "multiply"
          },
          "inputSchema": {
            "type": "object",
            "properties": {
              "a": { "type": "number" },
              "b": { "type": "number" }
            },
            "required": ["a", "b"]
          }
        }
      ],
      "resources": [
        {
          "uri": "greeting://hello",
          "name": "greeting",
          "description": "인사말 메시지",
          "mimeType": "text/plain",
          "handler": {
            "path": "handlers/greeting.js",
            "function": "getGreeting"
          }
        }
      ],
      "prompts": []
    },
    {
      "name": "engineering-server",
      "version": "1.0.0",
      "description": "공학 계산기 전용 MCP 서버",
      "enabled": true,
      "tools": [],
      "resources": [],
      "prompts": []
    }
  ],
  "global": {
    "logLevel": "info",
    "port": 3000
  }
}
