{
  "global": {
    "port": 3000,
    "host": "0.0.0.0",
    "logLevel": "info"
  },
  "servers": [
    {
      "name": "demo-server",
      "version": "1.0.0",
      "description": "데모 MCP 서버 - 계산기 및 인사말 기능 제공",
      "enabled": true,
      "tools": [
        {
          "name": "add",
          "title": "덧셈 계산기",
          "description": "두 숫자를 더합니다",
          "inputSchema": {
            "a": {
              "type": "number",
              "description": "첫 번째 숫자"
            },
            "b": {
              "type": "number",
              "description": "두 번째 숫자"
            }
          },
          "outputSchema": {
            "result": {
              "type": "number",
              "description": "덧셈 결과"
            }
          },
          "handler": {
            "path": "handlers/calculator.js",
            "function": "add"
          }
        },
        {
          "name": "multiply",
          "title": "곱셈 계산기",
          "description": "두 숫자를 곱합니다",
          "inputSchema": {
            "a": {
              "type": "number",
              "description": "첫 번째 숫자"
            },
            "b": {
              "type": "number",
              "description": "두 번째 숫자"
            }
          },
          "outputSchema": {
            "result": {
              "type": "number",
              "description": "곱셈 결과"
            }
          },
          "handler": {
            "path": "handlers/calculator.js",
            "function": "multiply"
          }
        }
      ],
      "resources": [
        {
          "uri": "greeting://{name}",
          "name": "greeting",
          "title": "인사말 리소스",
          "description": "이름을 받아 인사말을 생성합니다",
          "handler": {
            "path": "handlers/greeting.js",
            "function": "getGreeting"
          }
        }
      ],
      "prompts": []
    }
  ]
}
